@page "{id:int}"
@model EditAccountModel
@{
    ViewData["Title"] = "Edit Account";
}
<h2>Edit Account</h2>

<form method="post">
    <input type="hidden" asp-for="Input.AccountId" />
    <div class="mb-3">
        <label class="form-label">Account Name</label>
        <input asp-for="Input.AccountName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Account Type</label>
        <select asp-for="Input.AccountType" class="form-select">
            <option>Group</option>
            <option>Ledger</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Parent Account (optional)</label>
        <select asp-for="Input.ParentId" class="form-select">
            <option value="">-- None --</option>
            @foreach (var acc in Model.Accounts)
            {
                <option value="@acc.AccountId" selected="@(acc.AccountId == Model.Input.ParentId)">@acc.AccountName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>